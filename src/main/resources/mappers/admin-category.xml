<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sdtalk.admin.category">
	<!-- 답변템플릿 카테고리 목록 조회 -->
	<select id="selectAll" parameterType="map" resultType="map">
		<choose>
			<when test='type == "lg"'>
				select * 
				from CateLg 
				where 1=1
				and cid= #{cid} 
				order by id desc
			</when>
			<when test='type == "md"'>
				select * 
				from CateMd 
				where cid = #{cid} 
				<if test='catelg != null and catelg != ""'>
					and catelg = #{catelg}
				</if>
				order by id desc
			</when>
			<when test='type == "sm"'>
				select * 
				from CateSm 
				where cid = #{cid}
				<if test='catemd != null and catemd != ""'>
					and catemd = #{catemd}
				</if> 
				order by id desc
			</when>
		</choose>
	</select>
	
	<select id="selectOne" parameterType="map" resultType="map">
		<choose>
			<when test='type == "lg"'>
				select * 
				from CateLg 
				where id= #{id}
			</when>
			<when test='type == "md"'>
				select * 
				from CateMd 
				where id= #{id}
			</when>
			<when test='type == "sm"'>
				select * 
				from CateSm 
				where id= #{id}
			</when>
		</choose>
	</select>
	
	<!-- 답변템플릿 카테고리정보 등록 -->
	<insert id="insert" parameterType="map" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		<choose>
			<when test='type == "lg"'>
				insert into CateLg (name, emp, cid) 
				values(#{name}, #{emp}, #{cid})
			</when>
			<when test='type == "md"'>
				insert into CateMd (catelg, name, emp, cid) 
				values(#{catelg}, #{name}, #{emp}, #{cid})
			</when>
			<when test='type == "sm"'>
				insert into CateSm(catemd, name, emp, cid)
				values(#{catemd}, #{name}, #{emp}, #{cid})
			</when>
		</choose>
	</insert>
	
	<!-- 답변템플릿 카테고리정보 수정 -->
	<update id="update" parameterType="map">
		<choose>
			<when test='type == "lg"'>
				update CateLg 
				set name = #{name}, 
					emp = #{emp} 
				where id = #{id}
			</when>
			<when test='type == "md"'>
				update CateMd 
				set name = #{name}, 
					emp = #{emp} 
				where id = #{id}
			</when>
			<when test='type == "sm"'>
				update CateSm 
				set name = #{name}, 
					emp = #{emp}
				where id = #{id}
			</when>
		</choose>
	</update>
	
	<!-- 답변템플릿 카테고리정보 삭제 -->
	<delete id="delete">
		<choose>
			<when test='type == "lg"'>
				delete 
				from CateLg 
				where id = #{id}
			</when>
			<when test='type == "md"'>
				delete 
				from CateMd 
				where id = #{id}
			</when>
			<when test='type == "sm"'>
				delete 
				from CateSm 
				where id = #{id}
			</when>
		</choose>
	</delete>
	
</mapper>